<!doctype html>
<html lang="en">

<head>
    <title>Dashboard</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- font and icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <header>
        <div class="container-fluid p-0">
            <nav class="navbar navbar-expand-lg bg-nav position-fixed w-100">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Navbar</a>
                    <button class="navbar-toggler button-toggle-nav" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                        <!-- <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Features</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Pricing</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled">Disabled</a>
                            </li>
                        </ul> -->
                        <form class="d-flex position-relative me-5" role="search">
                            <input style="width: 500px;" class="form-control me-2" type="search" placeholder="Search"
                                aria-label="Search">
                            <button class="btn button-nav-search position-absolute me-2" type="submit"><i
                                    class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                        <ul class="navbar-nav">
                            <li class="nav-item px-2">
                                <a href=""> <i class="fa-solid fa-user"></i></a>
                            </li>
                            <li class="nav-item px-2">
                                <a href="/auth/logout"><i class="fa-solid fa-right-from-bracket"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>

            </nav>
        </div>
    </header>
    <main>
        <div class="asside">
            <div class="my-5">
                <a href="/admin/{{result.user_id}}" class="icons-nav p-3 my-3">
                    <i class="fa-solid fa-house"></i>

                </a>
                Home
            </div>
            <div class="my-5">
                <a href="/admin/{{result.user_id}}/coursesPage" class="icons-nav p-3 my-3">
                    <i class="fa-brands fa-itunes-note"></i>

                </a>
                Courses
            </div>
            <div class="my-5">
                <a href="/admin/{{result.user_id}}/quizPage" class="icons-nav p-3 my-3">
                    <i class="fa-solid fa-book-open"></i>

                </a>
                Quizs
            </div>
            <div class="my-5">
                <a href="/admin/{{result.user_id}}/earning" class="icons-nav p-3 my-3">
                    <i class="fa-solid fa-coins"></i>

                </a>
                Earnings
            </div>
            <div class="my-5">
                <a href="/admin/{{result.user_id}}/reportPage" class="icons-nav p-3 my-3">
                    <i class="fa-solid fa-chart-line"></i>

                </a>
                Report
            </div>

        </div>

        <div class="container-fluid pt-60 ps-125">
            <h1 class="py-2">Analistics</h1>
            <div class="container-fluid bg-light all-border">
                <div class="container">

                    <div>
                        <canvas id="myChart"></canvas>
                    </div>

                </div>
            </div>

            <div class="row py-5 pe-5">
                <div class="col-6">
                    <div class="bg-light all-border">
                        <div class="d-flex justify-content-between py-3">
                            <div class="recent-courses">
                                <h3 class="recent-courses-heading ms-2">Recent Courses</h3>

                            </div>
                            <div class="button-view-all-courses">
                                <button class="view-all-courses p-2 mx-2" name="view-all">View All</button>
                            </div>
                        </div>

                        <div class="recent-courses-table p-3">
                            <table class="table caption-top">
                                <caption>List of Courses</caption>
                                <thead>
                                    <tr>

                                        <th scope="col">Detail</th>
                                        <th scope="col" class="text-right">Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>


                                        <td scope="1">Otto</td>
                                        <td class="text-right">@mdo</td>
                                    </tr>
                                    <tr>

                                        <td scope="2">Thornton</td>
                                        <td class="text-right">@fat</td>
                                    </tr>
                                    <tr>

                                        <td scope="3">the Bird</td>
                                        <td class="text-right">@twitter</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <div class="col-6">
                    <div class="bg-light all-border">
                        <div class="d-flex justify-content-between py-3">
                            <div class=" recent-quiz">
                                <h3 class="recent-quiz-heading ms-2">Recent-quiz</h3>

                            </div>
                            <div class="button-view-all-quiz">
                                <button class="view-all-quiz p-2 mx-2" name="view-all">View All</button>
                            </div>
                        </div>
                        <div class="recent-quiz-table p-3">
                            <table class="table caption-top">
                                <caption>List of quiz</caption>
                                <thead>
                                    <tr>

                                        <th scope="col">Detail</th>
                                        <th scope="col" class="text-right">Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>


                                        <td scope="1">Otto</td>
                                        <td class="text-right">@mdo</td>
                                    </tr>
                                    <tr>

                                        <td scope="2">Thornton</td>
                                        <td class="text-right">@fat</td>
                                    </tr>
                                    <tr>

                                        <td scope="3">the Bird</td>
                                        <td class="text-right">@twitter</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>
            </div>
        </div>



    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
        </script>



    <script>
        const ctx = document.getElementById('myChart');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'March', 'April', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'Subscribe of Month',
                    data: [1, 3, 4, 6, 10, 20, 30, 50, 52, 60, 80, 100, 120],
                    borderWidth: 1,
                    fillColor: "rgba(151,249,190,0.5)",
                    strokeColor: "rgba(255,255,255,1)",
                    pointColor: "rgba(220,220,220,1)",
                    pointStrokeColor: "#fff",
                    pointHitRadius: "500px",
                    tension: 0.4,
                    fill: true
                },
                {
                    fill: true,
                    borderWidth: 1,
                    tension: 0.4,
                    label: 'Complete Courses of Month',
                    fillColor: "rgba(252,147,65,0.5)",
                    strokeColor: "rgba(255,255,255,1)",
                    pointColor: "rgba(173,173,173,1)",
                    pointStrokeColor: "#fff",
                    data: [0, 0, 2, 5, 6, 8, 12, 20, 21, 25, 30, 36]
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });


    </script>

</body>

</html>